generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    providerId String  @unique
    email      String
    firstName  String
    lastName   String?

    stripeCustomerId   String?   @unique
    subscriptionId     String?
    plan               Plan      @default(FREE)
    subscriptionEndsAt DateTime?

    ProfileLink ProfileLink[]

    @@index([email])
}

enum Plan {
    FREE
    PRO
}

model ProfileLink {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    link String @unique

    image String?
    name  String
    bio   String?

    user   User   @relation(fields: [userId], references: [id])
    userId String

    Bento           Bento[]
    ProfileLinkView ProfileLinkView[]

    @@index([userId])
}

model ProfileLinkView {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    profileLink   ProfileLink @relation(fields: [profileLinkId], references: [id])
    profileLinkId String

    ip        String
    userAgent String

    @@index([profileLinkId, ip])
    @@index([ip])
    @@index([userAgent])
}

model Bento {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    type BentoType

    href    String? // for link type
    url     String? // for image/video type
    caption String? // for image/video type

    clicks Int @default(0)

    mobileSize  BentoSize @default(SIZE_2x2) // mobile size
    desktopSize BentoSize @default(SIZE_2x2) // desktop size

    mobilePosition  Json @default("{\"x\":0,\"y\":0}") // Json field to specify the grid position
    desktopPosition Json @default("{\"x\":0,\"y\":0}") // Json field to specify the grid position

    profileLink   ProfileLink @relation(fields: [profileLinkId], references: [id])
    profileLinkId String

    @@index([profileLinkId])
}

enum BentoType {
    LINK
    IMAGE
    VIDEO
}

enum BentoSize {
    SIZE_4x1
    SIZE_2x2
    SIZE_2x4
    SIZE_4x2
    SIZE_4x4
}
